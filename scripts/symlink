#!/bin/sh

DIR=$(cd `dirname $0` && pwd)

link (){
    target="$DIR/../$1"
    link=$2

    echo "ln -s $target $link"

    rm -rf $link
    ln -s $target $link
}

link bashrc ~/.bashrc
link gitconfig ~/.gitconfig
link vim ~/.vim
link vimrc ~/.vimrc
link vimrc_git ~/.vimrc_git
link gvimrc ~/.gvimrc
link Xresources ~/.Xresources
link Xresources.light ~/.Xresources.light
link ackrc ~/.ackrc
link git-completion.bash ~/.git-completion.bash
link tmux.conf ~/.tmux.conf
link Xmodmap ~/.Xmodmap
link ctags ~/.ctags
link vimperatorrc ~/.vimperatorrc
link redshift.conf ~/.config/redshift.conf
link mplayer.conf ~/.mplayer/config
link xmonad.hs ~/.xmonad/xmonad.hs
link xinitrc ~/.xinitrc
link ghci ~/.ghci
link mpd ~/.mpd
link tmuxinator ~/.tmuxinator
link xmobarrc ~/.xmobarrc
link xbindkeysrc ~/.xbindkeysrc
link ranger/rc.conf ~/.config/ranger/rc.conf
link ranger/colorschemes ~/.config/ranger/colorschemes

# scripts
link scripts/fsize ~/bin/fsize
link scripts/startd ~/bin/startd
link scripts/xcolors ~/bin/xcolors
